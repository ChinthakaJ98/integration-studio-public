<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.integrationstudio.bpmn.extensions</groupId>
    <artifactId>org.wso2.integrationstudio.bpmn.extensions.activator</artifactId>
    <version>8.0.1-SNAPSHOT</version>
    <name>WSO2 Integration Studio BPMN Extensions Activator</name>
    <parent>
        <artifactId>wso2-integrationstudio-bps-plugins</artifactId>
        <groupId>org.wso2.integrationstudio</groupId>
        <version>8.0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin}</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>pre-clean</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete dir="${project.basedir}/libs"/>
                                <mkdir dir="${project.basedir}/libs"/>
                                <mkdir dir="${project.basedir}/libs/extensions"/>
                                <copy file="${project.basedir}/../org.wso2.integrationstudio.bpmn.extensions/target/org.wso2.integrationstudio.bpmn.extensions-${project.version}.jar"
                                      tofile="${project.basedir}/libs/extensions/org.wso2.integrationstudio.bpmn.extensions-${project.version}.jar"/>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>post-clean</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete dir="${project.basedir}/libs"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <packaging>eclipse-plugin</packaging>
</project>
